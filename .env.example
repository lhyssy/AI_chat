# 应用配置
REACT_APP_NAME=AI Chat Web
REACT_APP_VERSION=0.1.0
REACT_APP_DESCRIPTION=AI聊天应用

# API配置
REACT_APP_API_BASE_URL=http://localhost:3000
REACT_APP_WS_URL=ws://localhost:3000/ws

# 认证配置
REACT_APP_JWT_SECRET=your_jwt_secret_key
REACT_APP_JWT_EXPIRES_IN=7d

# 邮件服务配置
REACT_APP_SMTP_HOST=smtp.example.com
REACT_APP_SMTP_PORT=587
REACT_APP_SMTP_USER=your_email@example.com
REACT_APP_SMTP_PASS=your_email_password

# AI模型配置
REACT_APP_OPENAI_API_KEY=your_openai_api_key
REACT_APP_CLAUDE_API_KEY=your_claude_api_key

# 数据库配置
REACT_APP_DB_HOST=localhost
REACT_APP_DB_PORT=27017
REACT_APP_DB_NAME=ai_chat
REACT_APP_DB_USER=admin
REACT_APP_DB_PASS=password

# Redis配置
REACT_APP_REDIS_HOST=localhost
REACT_APP_REDIS_PORT=6379
REACT_APP_REDIS_PASS=password

# 支付配置
REACT_APP_WECHAT_APP_ID=your_wechat_app_id
REACT_APP_WECHAT_MCH_ID=your_wechat_mch_id
REACT_APP_WECHAT_API_KEY=your_wechat_api_key

REACT_APP_ALIPAY_APP_ID=your_alipay_app_id
REACT_APP_ALIPAY_PRIVATE_KEY=your_alipay_private_key
REACT_APP_ALIPAY_PUBLIC_KEY=your_alipay_public_key

# 其他配置
REACT_APP_FILE_UPLOAD_MAX_SIZE=10485760
REACT_APP_RATE_LIMIT_MAX_REQUESTS=100
REACT_APP_RATE_LIMIT_WINDOW_MS=900000

# 开发环境配置
NODE_ENV=development
DEBUG=app:*

# 注意：这是示例配置文件，实际的密钥和敏感信息请在 Vercel 的环境变量中设置
# 不要在此文件中填写真实的密钥和敏感信息！

# 数据库配置
MONGODB_URI=mongodb://localhost:27017/ai-chat
MONGODB_USER=your_mongodb_user
MONGODB_PASSWORD=your_mongodb_password

# JWT配置
JWT_SECRET=your_jwt_secret
JWT_EXPIRES_IN=7d

# 文件上传配置
UPLOAD_MAX_SIZE=10485760  # 10MB
ALLOWED_FILE_TYPES=.txt,.pdf,.doc,.docx,.md

# 支付配置
STRIPE_PUBLIC_KEY=your_stripe_public_key
STRIPE_SECRET_KEY=your_stripe_secret_key

# 邮件配置
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASSWORD=your_smtp_password

# 缓存配置
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password

# 日志配置
LOG_LEVEL=info
LOG_FILE_PATH=logs/app.log

# 安全配置
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX=100 